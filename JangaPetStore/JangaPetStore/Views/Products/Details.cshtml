@model JangaPetStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="text-center mb-4">@Model.Name</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? Url.Content("~/uploads/logo.png") : Url.Content(Model.ImageUrl))"
                 alt="Product Image"
                 class="img-fluid product-image rounded shadow-sm">
        </div>
        <div class="col-md-6">
            <div class="product-details">
                <h4 class="mb-3">Description</h4>
                <p>@Model.Description</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Category:</strong> @Model.Category.Name</p>
                <p><strong>In Stock:</strong> @Model.StockQuantity</p>
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.ProductId" />
                    <div class="form-group mr-2">
                        <input type="number" name="quantity" value="1" min="1" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    .container {
        margin-top: 2rem;
    }

    .text-center {
        text-align: center;
    }

    .product-image {
        border: 2px solid black;
        max-height: 100%;
        object-fit: cover;
        border-radius: 0.375rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .product-details {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.375rem;
        box-shadow: 0 1.125rem 1.25rem rgba(0, 0, 0, 2.075);
    }

    .form-inline {
        display: flex;
        align-items: center;
    }

    .form-group {
        margin-right: 1rem;
    }

    .form-control {
        width: auto;
    }
    .row {
        border: 2px solid black;
        padding: 3%;
        box-shadow: 0 1.125rem 1.25rem rgba(0, 0, 0, 2.075);
    }

</style>