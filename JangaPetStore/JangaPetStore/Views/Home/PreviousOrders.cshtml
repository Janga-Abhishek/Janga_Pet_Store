@model IEnumerable<JangaPetStore.Models.Order>

<h2>Previous Orders</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Order Items</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("d")</td>
                    <td>
                        <ul>
                            @foreach (var item in order.OrderItems)
                            {
                                <li>@item.Product.Name: @item.Quantity x @item.Price.ToString("C")</li>
                            }
                        </ul>
                    </td>
                    <td>@order.OrderItems.Sum(oi => oi.Quantity * oi.Price).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no previous orders.</p>
}
<style>
    footer {
        position: absolute !important;
        margin-top: auto;
    }
</style>