@model IEnumerable<JangaPetStore.Models.Category>

@{
    ViewData["Title"] = "Home";
}

<h2 class="text-center mb-4"></h2>

@foreach (var category in Model)
{
        <div class="category-section">
            <h3 class="my-4 text-center category-header">@category.Name</h3>
            <div class="row" style=" margin-left: 2%; margin-right: 2%;">
                @foreach (var product in category.Products)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card border-light">
                            <img class="card-img-top" src="@(string.IsNullOrEmpty(product.ImageUrl) ? Url.Content("~/uploads/logo.png") : Url.Content(product.ImageUrl))" alt="Product Image" style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text truncate-description">@product.Description</p>
                                <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>
                                <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
}
