@model JangaPetStore.Models.Order

<h2>Order Confirmation</h2>

<p style=" font-size: 1.5em; font-weight: bold; color: #28a745; margin-bottom: 20px; text-shadow: 2px 2px 4px #ffffff, -2px -2px 4px #ffffff;">Thank you for your order!</p>
<p><strong>Order ID:</strong> @Model.OrderId</p>
<p><strong>Order Date:</strong> @Model.OrderDate</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@(item.Quantity * item.Price).ToString("C")</td>
            </tr>
        }
        <tr>
            <td colspan="3"><strong>Total</strong></td>
            <td>
                @Model.OrderItems.Sum(i => i.Quantity * i.Price).ToString("C")
            </td>
        </tr>
    </tbody>
</table>
<style>
    footer {
        position: absolute !important;
        margin-top: auto;
    }
</style>